{% extends 'base.html.twig' %}

{% block title %}Admin panel{% endblock %}

{% block body %}
<div class="container mt-4">
<div class="row">
<a href="{{ path('check_state_all') }}"><button class="btn btn-primary">Check status</button></a>
</div>

<div class="row mt-2">
<table class="table table-striped">
<thead>
<tr>
<th>Date</th>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Amount</th>
<th>Currency</th>
<th>Status</th>

</tr>
</thead>
<tbody>
{% for payment in paymentRequests %}
<tr>

<td>{{ payment.createdAt | date('d/m/Y')}} </td>
<td>{{ payment.firstName }}</td>
<td>{{ payment.lastName}} </td>
<td>{{ payment.email}} </td>
<td>{{ payment.amount}} </td>
<td>{{ payment.currency}} </td>
<td><a href="{{ path('check_state', {'id': payment.id}) }}"><button class="btn {{ payment.getCSSState }}">{{ payment.getFormatedState }}</button></a></td>
</tr>
{% endfor %}
</tbody>

</table>
</div>
</div>

{% endblock %}