{% extends 'base.html.twig' %}

{% block title %}Admin panel{% endblock %}

{% block body %}

<table class="table table-striped">
<thead>
<tr>
<th>Date</th>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Amount</th>
<th>Currency</th>
<th>Status</th>

</tr>
</thead>
<tbody>
{% for payment in paymentRequests %}
<tr>

<td>{{ payment.createdAt | date('d/m/Y')}} </td>
<td>{{ payment.firstName }}</td>
<td>{{ payment.lastName}} </td>
<td>{{ payment.email}} </td>
<td>{{ payment.amount}} </td>
<td>{{ payment.currency}} </td>
<td><button class="btn btn-primary" href="{{ path('check_state', {'id': payment.id}) }}">{{ payment.getFormatedState }}</button></td>
</tr>
{% endfor %}
</tbody>

</table>

{% endblock %}