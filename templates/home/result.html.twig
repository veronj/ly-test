{% extends 'base.html.twig' %}


{% block title %}Admin panel{% endblock %}

{% block body %}
<div class="row">

<div class="card text-white bg-success mb-3" style="max-width: 18rem;">
  <div class="card-header"></div>
  <div class="card-body">
    <h5 class="card-title">Request : {{ paymentRequest.request_id }}</h5>
    <h5 class="card-title">{{ paymentRequest.firstName }} {{ paymentRequest.lastName }}</h5>
    
    <p class="card-text">{{ paymentRequest.message }}</p>
     <p class="card-text"><a href="{{ paymentRequest.mobile_url }}">Payer</a></p>
     
  </div>
</div>
</div>
{% endblock %}